generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Organization {
  id          String      @id @default(uuid())
  uuid        String   @unique @default(uuid())
  name        String   @unique
  phone       String
  email       String?
  address     String?
  isBloodBank Boolean  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  

  @@index([name])
}